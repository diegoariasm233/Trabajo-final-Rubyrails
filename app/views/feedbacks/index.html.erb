<p id="notice"><%= notice %></p>

<h1>Comentarios</h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Correo</th>
      <th>Comentario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= feedback.name %></td>
        <td><%= feedback.email %></td>
        <td><%= feedback.comments %></td>
        <td><%= link_to 'Ver', feedback , :class => "btn btn-warning"%></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Comentario', new_feedback_path %>
